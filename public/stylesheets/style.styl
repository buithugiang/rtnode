body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
.ctimg
	float: left
	margin-right: 10px
	margin-left: 7px

.animate-enter 
.animate-leave
	-webkit-transition: 650ms cubic-bezier(0.420, 0.000, 1.000, 1.000) all
	-moz-transition: 650ms cubic-bezier(0.420, 0.000, 1.000, 1.000) all
	-ms-transition: 650ms cubic-bezier(0.420, 0.000, 1.000, 1.000) all
	-o-transition: 650ms cubic-bezier(0.420, 0.000, 1.000, 1.000) all
	transition: 650ms cubic-bezier(0.420, 0.000, 1.000, 1.000) all
	position: relative
	display: block

.animate-enter.animate-enter-active 
.animate-leave
	opacity: 1
	top: 0
	height: 30px

.animate-leave.animate-leave-active
.animate-enter
	opacity: 0
	top: -50px
	height: 0px
